<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#EA74BB" android:endColor="#FF9D43" android:type="linear"  />
            <corners android:radius="30dp" />
            <stroke android:width="4dip" android:color="#ffffff" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#EA74BB" android:endColor="#FF9D43" android:type="linear"  />
            <corners android:radius="30dp" />
            <stroke android:width="4dip" android:color="#ffffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF9D43" android:endColor="#EA74BB" android:type="linear"  />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>